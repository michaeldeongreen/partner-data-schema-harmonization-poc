{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.oilgas.com/well-data/v1.0.0",
  "title": "Oil & Gas Well Data Schema",
  "description": "Industry standard schema for oil and gas well header information",
  "type": "object",
  "required": ["wellIdentifier", "operator", "location", "status"],
  "properties": {
    "wellIdentifier": {
      "type": "object",
      "required": ["apiNumber", "wellName"],
      "properties": {
        "apiNumber": {
          "type": "string",
          "pattern": "^[0-9]{2}-[0-9]{3}-[0-9]{5}$",
          "description": "14-digit API well number in format XX-XXX-XXXXX"
        },
        "wellName": {
          "type": "string",
          "maxLength": 100,
          "description": "Official well name"
        },
        "uwi": {
          "type": "string",
          "description": "Unique Well Identifier (Canadian format)"
        }
      }
    },
    "operator": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 200,
          "description": "Operating company name"
        },
        "operatorCode": {
          "type": "string",
          "description": "Regulatory operator code"
        }
      }
    },
    "location": {
      "type": "object",
      "required": ["surfaceCoordinates"],
      "properties": {
        "surfaceCoordinates": {
          "type": "object",
          "required": ["latitude", "longitude"],
          "properties": {
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            },
            "datum": {
              "type": "string",
              "enum": ["NAD27", "NAD83", "WGS84"],
              "default": "NAD83"
            }
          }
        },
        "bottomholeCoordinates": {
          "type": "object",
          "properties": {
            "latitude": {"type": "number"},
            "longitude": {"type": "number"}
          }
        },
        "elevation": {
          "type": "number",
          "description": "Ground elevation"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "PRODUCING", "SHUT_IN", "ABANDONED", "PLUGGED", "DRILLING", "COMPLETED", "SUSPENDED"]
    },
    "dates": {
      "type": "object",
      "properties": {
        "spudDate": {
          "type": "string",
          "format": "date",
          "description": "Date drilling commenced"
        },
        "completionDate": {
          "type": "string",
          "format": "date",
          "description": "Date well completed"
        },
        "firstProductionDate": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "wellDesign": {
      "type": "object",
      "properties": {
        "wellType": {
          "type": "string",
          "enum": ["VERTICAL", "DIRECTIONAL", "HORIZONTAL"]
        },
        "totalMeasuredDepth": {
          "type": "number",
          "minimum": 0,
          "description": "Total measured depth in feet"
        },
        "totalVerticalDepth": {
          "type": "number",
          "minimum": 0,
          "description": "True vertical depth in feet"
        },
        "primaryTarget": {
          "type": "string",
          "description": "Primary target formation"
        }
      }
    },
    "casingProgram": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["casingSize", "settingDepth"],
        "properties": {
          "casingSize": {
            "type": "number",
            "description": "Casing outer diameter in inches"
          },
          "settingDepth": {
            "type": "number",
            "description": "Setting depth in feet"
          },
          "weight": {
            "type": "number",
            "description": "Casing weight in lbs/ft"
          },
          "grade": {
            "type": "string",
            "description": "Steel grade"
          }
        }
      }
    }
  }
}