{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.oilgas.com/production-data/v1.0.0",
  "title": "Oil & Gas Production Data Schema",
  "description": "Industry standard schema for oil and gas production reporting",
  "type": "object",
  "required": ["wellIdentifier", "operator", "reportingPeriod", "productionVolumes"],
  "properties": {
    "wellIdentifier": {
      "type": "object",
      "required": ["apiNumber"],
      "properties": {
        "apiNumber": {
          "type": "string",
          "pattern": "^[0-9]{2}-[0-9]{3}-[0-9]{5}$"
        },
        "wellName": {
          "type": "string"
        }
      }
    },
    "operator": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 200
        }
      }
    },
    "reportingPeriod": {
      "type": "object",
      "required": ["startDate", "endDate", "reportType"],
      "properties": {
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "reportType": {
          "type": "string",
          "enum": ["DAILY", "MONTHLY", "QUARTERLY", "ANNUAL"]
        },
        "activeDays": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of days well was producing"
        }
      }
    },
    "productionVolumes": {
      "type": "object",
      "properties": {
        "oil": {
          "type": "object",
          "properties": {
            "grossVolume": {
              "type": "number",
              "minimum": 0,
              "description": "Gross oil production in barrels"
            },
            "netVolume": {
              "type": "number",
              "minimum": 0,
              "description": "Net oil production in barrels"
            },
            "averageRate": {
              "type": "number",
              "minimum": 0,
              "description": "Average daily production rate in BOPD"
            },
            "apiGravity": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "API gravity of produced oil"
            }
          }
        },
        "gas": {
          "type": "object",
          "properties": {
            "grossVolume": {
              "type": "number",
              "minimum": 0,
              "description": "Gross gas production in MCF"
            },
            "netVolume": {
              "type": "number",
              "minimum": 0,
              "description": "Net gas production in MCF"
            },
            "averageRate": {
              "type": "number",
              "minimum": 0,
              "description": "Average daily production rate in MCFPD"
            },
            "btuContent": {
              "type": "number",
              "minimum": 0,
              "description": "BTU content per cubic foot"
            }
          }
        },
        "water": {
          "type": "object",
          "properties": {
            "volume": {
              "type": "number",
              "minimum": 0,
              "description": "Water production in barrels"
            },
            "averageRate": {
              "type": "number",
              "minimum": 0,
              "description": "Average daily water rate in BWPD"
            },
            "waterCut": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Water cut percentage"
            }
          }
        },
        "condensate": {
          "type": "object",
          "properties": {
            "volume": {
              "type": "number",
              "minimum": 0,
              "description": "Condensate production in barrels"
            },
            "averageRate": {
              "type": "number",
              "minimum": 0,
              "description": "Average daily condensate rate in BCPD"
            }
          }
        }
      }
    },
    "wellheadConditions": {
      "type": "object",
      "properties": {
        "tubingPressure": {
          "type": "number",
          "minimum": 0,
          "description": "Tubing head pressure in PSI"
        },
        "casingPressure": {
          "type": "number",
          "minimum": 0,
          "description": "Casing head pressure in PSI"
        },
        "flowlineTemperature": {
          "type": "number",
          "description": "Flowline temperature in Fahrenheit"
        },
        "chokeSize": {
          "type": "string",
          "description": "Choke size in 64ths of an inch"
        }
      }
    },
    "economicInterests": {
      "type": "object",
      "properties": {
        "workingInterest": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Working interest percentage"
        },
        "royaltyInterest": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Royalty interest percentage"
        },
        "netRevenueInterest": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Net revenue interest percentage"
        }
      }
    },
    "qualityMetrics": {
      "type": "object",
      "properties": {
        "gasOilRatio": {
          "type": "number",
          "minimum": 0,
          "description": "Gas-oil ratio in SCF/BBL"
        },
        "h2sContent": {
          "type": "number",
          "minimum": 0,
          "description": "H2S content in PPM"
        },
        "co2Content": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "CO2 content percentage"
        }
      }
    }
  }
}